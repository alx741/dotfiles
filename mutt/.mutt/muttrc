    set smtp_url = 'smtp://alx741@mail.riseup.net:587/'
    set imap_pass = `cat ~/.mutt/pass`
    set smtp_pass = `cat ~/.mutt/pass`
    set folder = 'imaps://mail.riseup.net:993'
