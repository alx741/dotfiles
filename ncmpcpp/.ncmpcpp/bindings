# Vim like bindings

def_key "k"
  scroll_up

def_key "j"
  scroll_down

def_key "ctrl-u"
  page_up

def_key "ctrl-d"
  page_down

def_key "g"
  move_home

def_key "G"
  move_end

def_key "l"
  next_column

def_key "l"
  slave_screen

def_key "l"
  volume_up

def_key "h"
  previous_column

def_key "h"
  master_screen

def_key "h"
  volume_down

def_key "L"
  seek_forward

def_key "H"
  seek_backward

def_key "/"
  start_searching
