#{{{ Bindigs
    # Escape
    escape C-g

    # Abort with ESC
    bind Escape abort

    bind q only

    # Start graphical terminal emulator instance
    bind c exec tilda

    # Give temporally control to DWM
    bind W tmpwm dwm

    # Vi keys
    bind j focusdown
    bind h focusleft
    bind k focusup
    bind l focusright
    bind J exchangedown
    bind H exchangeleft
    bind K exchangeup
    bind L exchangeright
#}}}

# Banish the mouse pointer in every window change
addhook key banish

# Put cursor where it was previously
warp on

# Don't convert cursor in a box while waiting commands
set waitcursor 0

# Messages config
msgwait 1
startup_message off
set fgcolor green
set bgcolor black

# More informative date and time
bind a exec ratpoison -c "echo $( acpi -b | awk '{ print $3, $4 }' | tr -d ',' ) ||  $( date "+%F %r" )"

# If there is more than 1 screen, give focus to the second one
nextscreen

# vim:fdm=marker
