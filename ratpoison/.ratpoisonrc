#{{{ Bindigs
    #{{{ Unbindings
        unbind q
        unbind C-k
        unbind S
        unbind c
    #}}}

    # Escape
    escape C-g

    # Abort with ESC
    bind Escape abort

    # Only window
    bind o only

    # Fast switching
    bind t exec ~/.scripts/select.sh terminal
    bind e exec ~/.scripts/select.sh firefox

    # Give temporally control to metacity
    bind W tmpwm metacity

    # Close current window
    bind Q delete

    # Volume control
    bind bracketright exec ~/.scripts/volume_control.sh +
    bind bracketleft exec ~/.scripts/volume_control.sh -
    bind backslash  exec ~/.scripts/volume_control.sh m

    #{{{ Vi like bindings
        bind j focusdown
        bind h focusleft
        bind k focusup
        bind l focusright
        bind J exchangedown
        bind H exchangeleft
        bind K exchangeup
        bind L exchangeright
        bind s vsplit
        bind v hsplit
    #}}}

    # Print information
    bind a exec ratpoison -c "echo $( ~/.scripts/info.sh )"
    bind A exec ratpoison -c "echo $( cal -3 )"

    # Network information
    bind I exec ratpoison -c "echo $( ~/.scripts/network.sh )"

    # Turn off the display
    bind Return exec xset dpms force off

    #{{{ Music control
        newkmap music
        definekey music p exec ~/.scripts/music_control.sh p
        definekey music s exec ~/.scripts/music_control.sh s
        definekey music i exec ~/.scripts/music_control.sh i
        definekey music n exec ~/.scripts/music_control.sh n
        definekey music N exec ~/.scripts/music_control.sh N
        definekey music period exec ~/.scripts/music_control.sh +
        definekey music comma exec ~/.scripts/music_control.sh -
        bind m readkey music
    #}}}
#}}}


# Put cursor where it was previously
warp on

# Don't convert cursor in a box while waiting commands
set waitcursor 0

# Messages config
msgwait 3
startup_message off
set fgcolor black
set bgcolor papaya whip

set winname class

# If there is more than 1 screen, give focus to the second one
nextscreen

# vim:fdm=marker
