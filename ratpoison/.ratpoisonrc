#{{{ Bindigs
    #{{{ Unbindings
        unbind q
        unbind C-k
        unbind S
        unbind c
    #}}}

    # Escape
    escape C-g

    # Abort with ESC
    bind Escape abort

    # Only window
    bind o only

    # Fast switching
    bind t exec ~/.scripts/select.sh terminal
    bind e exec ~/.scripts/select.sh firefox

    # Give temporally control to metacity
    bind W tmpwm metacity

    # Use ratmen window selection
    bind w exec ~/.scripts/window_select.sh

    # Close current window
    bind Q delete

    # Screen shots
    bind at exec scrot -u -z -q 100 -e 'mv $f ~/.shots/'

    # Backblight control
    bind parenright exec ~/.scripts/backlight_control.sh inc
    bind parenleft exec ~/.scripts/backlight_control.sh dec
    bind underscore exec ~/.scripts/backlight_control.sh toggle

    #{{{ Vi like bindings
        bind j focusdown
        bind h focusleft
        bind k focusup
        bind l focusright
        bind J exchangedown
        bind H exchangeleft
        bind K exchangeup
        bind L exchangeright
        bind s vsplit
        bind v hsplit
    #}}}

    # Print information
    bind a exec ratpoison -c "echo $( ~/.scripts/info.sh )"
    bind A exec ratpoison -c "echo $( cal -3 )"

    # Network information
    bind I exec ratpoison -c "echo $( ~/.scripts/network.sh )"

    # Turn off the display
    bind Return exec xset dpms force off

    #{{{ Volume control
        bind braceright  exec ~/.scripts/volume_control.sh high
        bind braceleft exec ~/.scripts/volume_control.sh low
        bind bar exec ~/.scripts/volume_control.sh medium
        bind slash exec ~/.scripts/volume_control.sh ask
        bind bracketright exec ~/.scripts/volume_control.sh inc
        bind bracketleft exec ~/.scripts/volume_control.sh dec
        bind backslash  exec ~/.scripts/volume_control.sh mute
    #}}}

    #{{{ Music control
        newkmap music
        definekey music space exec ~/.scripts/music_control.sh toggle
        definekey music p exec ~/.scripts/music_control.sh select_song
        definekey music P exec ~/.scripts/music_control.sh select_playlist
        definekey music s exec ~/.scripts/music_control.sh stop
        definekey music i exec ~/.scripts/music_control.sh information
        definekey music n exec ~/.scripts/music_control.sh next
        definekey music N exec ~/.scripts/music_control.sh previous
        definekey music period exec ~/.scripts/music_control.sh seek+
        definekey music comma exec ~/.scripts/music_control.sh seek-
        definekey music r exec ~/.scripts/music_control.sh playback repeat
        definekey music z exec ~/.scripts/music_control.sh playback random
        definekey music y exec ~/.scripts/music_control.sh playback single
        definekey music c exec ~/.scripts/music_control.sh playback consume
        bind m readkey music
    #}}}
#}}}


# Put cursor where it was previously
warp on

# Don't convert cursor in a box while waiting commands
set waitcursor 0

# Messages config
msgwait 3
startup_message off
set fgcolor black
set bgcolor papaya whip

set winname class

# If there is more than 1 screen, give focus to the second one
nextscreen

# vim:fdm=marker
